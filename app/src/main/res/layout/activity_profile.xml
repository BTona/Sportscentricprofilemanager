<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="568dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="152dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="LionelMessi"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/lionel"
                tools:srcCompat="@drawable/lionel" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="ChistianoRonaldo"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/cristiano"
                tools:srcCompat="@drawable/cristiano" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="Mbappe"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/mpabbe"
                tools:srcCompat="@drawable/mpabbe" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="Lewandowski"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/lew"
                tools:srcCompat="@drawable/lew" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="ThibaultCourtois"
                android:onClick="SetTeamIcon"
                app:srcCompat="@drawable/thibault"
                tools:srcCompat="@drawable/thibault" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="DanielAlves"
                android:onClick="SetTeamIcon"
                android:visibility="visible"
                app:srcCompat="@drawable/dalves"
                tools:srcCompat="@drawable/dalves" />
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOAD FROM PHONE" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>